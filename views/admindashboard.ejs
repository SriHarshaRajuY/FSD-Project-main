<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="../public/styles/admindashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="dashboard-container">
        <!-- Mobile Header -->
        <header class="mobile-header">
            <button id="mobile-menu-toggle" class="menu-toggle">
                <i class="fas fa-bars"></i>
            </button>
            <div class="logo">Admin Panel</div>
            <button id="theme-toggle" class="theme-toggle">
                <i class="fas fa-moon"></i>
                <i class="fas fa-sun"></i>
            </button>
        </header>

        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="logo">Admin Panel</div>
                <button id="sidebar-close" class="sidebar-close">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <nav class="sidebar-nav">
                <ul>
                    <li class="active" data-page="dashboard">
                        <a href="#dashboard"><i class="fas fa-home"></i> Dashboard</a>
                    </li>
                    <li data-page="users">
                        <a href="#users"><i class="fas fa-users"></i> Users</a>
                    </li>
                    <li data-page="analytics">
                        <a href="#analytics"><i class="fas fa-chart-bar"></i> Analytics</a>
                    </li>
                    <li data-page="settings">
                        <a href="#settings"><i class="fas fa-cog"></i> Settings</a>
                    </li>
                    <li data-page="logs">
                        <a href="#logs"><i class="fas fa-clipboard-list"></i> Logs</a>
                    </li>
                </ul>
            </nav>
            <div class="sidebar-footer">
                <button class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Dashboard Page -->
            <section id="dashboard-page" class="page active">
                <div class="page-header">
                    <h1>Admin Dashboard</h1>
                </div>

                <!-- Metric Cards -->
                <div class="metric-cards">
                    <div class="card metric-card">
                        <div class="card-content">
                            <div class="metric-header">
                                <h3>Total Users</h3>
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="metric-value">1,234</div>
                            <div class="metric-change positive">+5% from last month</div>
                        </div>
                    </div>
                    <div class="card metric-card">
                        <div class="card-content">
                            <div class="metric-header">
                                <h3>Active Sessions</h3>
                                <i class="fas fa-signal"></i>
                            </div>
                            <div class="metric-value">256</div>
                            <div class="metric-change negative">-2% from yesterday</div>
                        </div>
                    </div>
                    <div class="card metric-card">
                        <div class="card-content">
                            <div class="metric-header">
                                <h3>System Uptime</h3>
                                <i class="fas fa-server"></i>
                            </div>
                            <div class="metric-value">99.9%</div>
                            <div class="metric-change">Stable</div>
                        </div>
                    </div>
                    <div class="card metric-card">
                        <div class="card-content">
                            <div class="metric-header">
                                <h3>Pending Tasks</h3>
                                <i class="fas fa-tasks"></i>
                            </div>
                            <div class="metric-value">12</div>
                            <div class="metric-change positive">-3 from yesterday</div>
                        </div>
                    </div>
                </div>

                <!-- Charts -->
                <div class="dashboard-grid">
                    <div class="card chart-card">
                        <div class="card-header">
                            <h2>User Growth</h2>
                        </div>
                        <div class="card-content">
                            <canvas id="user-growth-chart"></canvas>
                        </div>
                    </div>
                    <div class="card chart-card">
                        <div class="card-header">
                            <h2>System Performance</h2>
                        </div>
                        <div class="card-content">
                            <canvas id="performance-chart"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="card">
                    <div class="card-header">
                        <h2>Recent Activity</h2>
                        <a href="#logs" class="view-all">View All</a>
                    </div>
                    <div class="card-content">
                        <div class="table-container">
                            <table class="data-table">
                                <thead>
                                    <tr>
                                        <th>Timestamp</th>
                                        <th>User</th>
                                        <th>Action</th>
                                        <th>Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>2023-10-15 10:30</td>
                                        <td>Sri Harsha</td>
                                        <td>Logged out</td>
                                        <td>From IP: 192.166.1.1</td>
                                    </tr>
                                    <tr>
                                        <td>2023-10-15 10:30</td>
                                        <td>Pardhuva</td>
                                        <td>Logged In</td>
                                        <td>From IP: 192.168.1.1</td>
                                    </tr>
                                    <tr>
                                        <td>2023-10-15 09:45</td>
                                        <td>Abhyas</td>
                                        <td>Updated Profile</td>
                                        <td>Changed email address</td>
                                    </tr>
                                    <tr>
                                        <td>2023-10-14 18:20</td>
                                        <td>sai teja</td>
                                        <td>System Update</td>
                                        <td>Applied security patch</td>
                                    </tr>
                                    <tr>
                                        <td>2023-10-14 12:10</td>
                                        <td>satish</td>
                                        <td>Created Account</td>
                                        <td>New user registered</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Users Page -->
            <section id="users-page" class="page">
                <div class="page-header">
                    <h1>User Management</h1>
                    <div class="header-actions">
                        <div class="search-container">
                            <input type="text" placeholder="Search users..." class="search-input">
                            <button class="search-btn"><i class="fas fa-search"></i></button>
                        </div>
                        <button id="add-user-btn" class="btn primary-btn">
                            <i class="fas fa-plus-circle"></i> Add User
                        </button>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2>All Users</h2>
                    </div>
                    <div class="card-content">
                        <div class="table-container">
                            <table id="users-table" class="data-table">
                                <thead>
                                    <tr>
                                        <th>User ID</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>#USR-001</td>
                                        <td>abhyas</td>
                                        <td>abhyas@gmail.com</td>
                                        <td>Admin</td>
                                        <td><span class="status active">Active</span></td>
                                        <td>
                                            <button class="action-btn"><i class="fas fa-eye"></i></button>
                                            <button class="action-btn"><i class="fas fa-edit"></i></button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>#USR-002</td>
                                        <td>sai teja</td>
                                        <td>sai teja@gmail.com</td>
                                        <td>User</td>
                                        <td><span class="status inactive">Inactive</span></td>
                                        <td>
                                            <button class="action-btn"><i class="fas fa-eye"></i></button>
                                            <button class="action-btn"><i class="fas fa-edit"></i></button>
                                        </td>
                                    </tr>
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Analytics Page -->
            <section id="analytics-page" class="page">
                <div class="page-header">
                    <h1>System Analytics</h1>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h2>Usage Statistics</h2>
                    </div>
                    <div class="card-content">
                        <canvas id="usage-chart"></canvas>
                    </div>
                </div>
            </section>

            <!-- Settings Page -->
            <section id="settings-page" class="page">
                <div class="page-header">
                    <h1>System Settings</h1>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h2>General Settings</h2>
                    </div>
                    <div class="card-content">
                        <form id="settings-form">
                            <div class="form-group">
                                <label for="system-name">System Name</label>
                                <input type="text" id="system-name" value="Admin Panel">
                            </div>
                            <div class="form-group">
                                <label for="timezone">Timezone</label>
                                <select id="timezone">
                                    <option value="UTC">UTC</option>
                                    <option value="EST">EST</option>
                                    <option value="PST">PST</option>
                                </select>
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="btn primary-btn">Save Changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </section>

            <!-- Logs Page -->
            <section id="logs-page" class="page">
                <div class="page-header">
                    <h1>System Logs</h1>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h2>Activity Logs</h2>
                    </div>
                    <div class="card-content">
                        <div class="table-container">
                            <table class="data-table">
                                <thead>
                                    <tr>
                                        <th>Timestamp</th>
                                        <th>User</th>
                                        <th>Action</th>
                                        <th>Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>2023-10-15 10:30</td>
                                        <td>Admin</td>
                                        <td>Logged In</td>
                                        <td>From IP: 192.168.1.1</td>
                                    </tr>
                                    <tr>
                                        <td>2023-10-14 18:20</td>
                                        <td>System</td>
                                        <td>Update Applied</td>
                                        <td>Security patch v1.2.3</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <!-- Overlay -->
    <div id="overlay" class="overlay"></div>

    <script src="../public/scripts/admindashboard.js"></script>
</body>
</html>